<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <h1 class="text-center">Nuevo producto</h1>
            <hr>
            <form action="/admin/alta" method="post">
                <div class="form-group">
                    <label for="nombre_producto">Nombre del producto</label>
                    <input type="text" class="form-control" name="nombre_producto" id="nombre_producto">

                </div>
                <div class="form-group">
                    <label for="categoria_producto">Seleccione la categoria</label>
                    <select class="form-control" id="categoria_producto" name="categoria_producto">
                        <option selected disabled> 
                            Categoria
                        </option>
                        <option value="Perros">Perros</option>
                        <option value="Gatos">Gatos</option>
                        <option value="Roedores">Roedores</option>
                        <option value="Aves">Aves</option>
                        <option value="Acuario">Acuario</option>
                    </select>
                    <br>
                <div class="form-group">
                    <label for="descripcion_producto">Descripcion del producto</label>
                    <textarea class="form-control" name="descripcion_producto" id="descripicion_producto"></textarea>
                </div>
                <div class="form-group">
                    <label for="precio_producto">Precio del producto</label>
                    <textarea class="form-control" name="precio_producto" id="precio_producto"></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Publicar</button>
            </form>
        </div>
    </div>
</div>