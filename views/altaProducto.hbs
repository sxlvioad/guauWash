<div class="container">
    <div class="row justify-content-center">
        <div class="col-8">
            <h5 class="text-center">Nuevo producto</h5>
            <form action="/admin/alta" method="post" enctype="multipart/form-data">
                {{!-- req.body.titulo --}}
                <div class="form-group">
                    <label for="titulo">Nombre del producto</label>
                    <input type="text" class="form-control" name="titulo" id="titulo">

                </div>
                <div class="form-group">
                    <label for="categoria">Seleccione la categoria</label>
                    <select class="form-control" id="categoria">
                        <option selected disabled> 
                            Categoria
                        </option>
                        <option value="perros">Perros</option>
                        <option value="gatos">Gatos</option>
                        <option value="roedores">Roedores</option>
                        <option value="peces">Peces</option>
                        <option value="varios">Varios</option>
                    </select>
                <div class="form-group">
                    <label for="descripcion">Descripcion del producto</label>
                    <textarea class="form-control" name="descripcion"></textarea>
                </div>
                <div class="form-group">
                    <label for="precio">Precio del producto</label>
                    <textarea class="form-control" name="precio">Precio del producto</textarea>
                </div>
                <div class="form-group">
                    <input type="file" name="imagen">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Publicar</button>
            </form>
        </div>
    </div>
</div>