<div class="container">
    <div class="row justify-content-center">
        <div class="col-8">
            <h5 class="text-center">Editar articulo</h5>
            <form action="/admin/editar" method="post">
            {{!-- <input type="text" value="{{idURL}}"> --}}
            {{#each productos_array}}
            <input type="hidden" value="{{id_p}}" name="id_p">

                <div class="form-group">
                    <label for="titulo">Nombre del producto</label>
                    <input type="text" class="form-control" 
                    value="{{nombre_producto}}" name="titulo" id="titulo">

                </div>

                <div class="form-group">
                    <label for="categoria">Seleccione la categoria</label>
                    <select class="form-control" id="categoria">
                        <option selected disabled> 
                            {{categoria_producto}}
                        </option>
                        <option value="perros">Perros</option>
                        <option value="gatos">Gatos</option>
                        <option value="roedores">Roedores</option>
                        <option value="peces">Peces</option>
                        <option value="varios">Varios</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="descripcion">Descripcion del producto</label>
                    <textarea class="form-control"  name="descripcion">{{descripcion_producto}}</textarea>
                </div>
                <div class="form-group">
                    <label for="precio">Precio del producto</label>
                    <textarea class="form-control"  name="precio">{{precio_producto}}</textarea>
                </div>
                {{!-- mostrar imagen --}}
                {{!-- <div class="form-group">
                    <input type="file" name="imagen">
                </div> --}}
            {{/each}}
                <button type="submit" class="btn btn-primary btn-block">Editar</button>
            </form>
        </div>
    </div>
</div>