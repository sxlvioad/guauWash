<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <h1 class="text-center">Editar articulo</h1>
            <hr>
            <form action="/admin/editar" method="post">
            {{!-- <input type="text" value="{{idURL}}"> --}}
            {{#each productos_array}}
            <input type="hidden" value="{{id_p}}" name="id_p">

                <div class="form-group">
                    <label for="titulo">Nombre del producto</label>
                    <input type="text" class="form-control" 
                    value="{{nombre_producto}}" name="nombre_producto" id="nombre_producto">

                </div>

                <div class="form-group">
                    <label for="categoria">Seleccione la categoria</label>
                    <select class="form-control" id="categoria_producto" name="categoria_producto">
                        <option selected disabled> 
                            {{categoria_producto}}
                        </option>
                        <option value="Perros">Perros</option>
                        <option value="Gatos">Gatos</option>
                        <option value="Roedores">Roedores</option>
                        <option value="Aves">Aves</option>
                        <option value="Acuario">Acuario</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="descripcion">Descripcion del producto</label>
                    <textarea class="form-control"  name="descripcion_producto">{{descripcion_producto}}</textarea>
                </div>
                <div class="form-group">
                    <label for="precio">Precio del producto</label>
                    <textarea class="form-control"  name="precio_producto">{{precio_producto}}</textarea>
                </div>
            {{/each}}
                <button type="submit" class="btn btn-primary btn-block">Editar</button>
            </form>
        </div>
    </div>
</div>